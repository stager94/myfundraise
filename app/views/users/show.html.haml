.user-banner-wrapper
	.rel
		= render_user_avatar_for @user, fake_styles: "size40"
		%h2= @user.name
		%h5
			= raw "Пользуется сервисом #{distance_of_time_in_words_to_now @user.created_at}"
			%br
			= fa_icon :"map-marker"
			= @user.address

		.counters
			.container
				.counter
					/ %label Актуальных кампаний
					= @user.campaigns.active.count
					%label 
						актуальных
						%br
						кампаний
				.counter
					= @user.campaigns.where(percentage: 100).count
					%label 
						успешных
						%br
						кампаний
				.counter
					= @user.campaigns.sum(:donations_count)
					%label 
						пожертвований
						%br
						собрано
				.counter
					= @user.donations.count
					%label
						пожертвований
						%br
						сделано
				.counter
					= @user.campaigns.sum(:likes_count)
					%label 
						лайков
						%br
						получено
				.counter
					= @user.campaigns.sum(:comments_count)
					%label 
						комментариев
						%br
						получено
.fundraise-subheader
	.container
		%ul.pull-right
			%li(class="#{'active' if @filter == 'favourites'}")
				= link_to url_for(filter: :favourites) do
					= fa_icon :"star-o"
					Избранное
					%b= @user.campaigns.favourites(@user).count
		%ul
			%li(class="#{'active' if @filter == 'active'}")
				= link_to url_for(filter: :active) do
					= fa_icon :"flash"
					Активные кампании
					%b= @user.campaigns.active.count
			%li(class="#{'active' if @filter == 'successfull'}")
				= link_to url_for(filter: :successfull) do
					= fa_icon :"trophy"
					Успешные кампании
					%b= @user.campaigns.successfull.count	
			%li(class="#{'active' if @filter == 'drafts'}")
				= link_to url_for(filter: :drafts) do
					= fa_icon :"lock"
					Черновики
					%b= @user.campaigns.drafts.count

.container#fundraise-container
	.row
		.col-md-12.main-wrapper
			.campaigns-row
				- if @campaigns.count > 0
					= render @campaigns
				- else
					%p.warning-message
						Stanislav wants to know what guests think about this event..
						%br
						This will helps to make his events more interesting!
						%br
						Be the Guest and you can be the first who leave review of this event!
