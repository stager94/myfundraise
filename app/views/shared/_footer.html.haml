			%span.fake-share.fb
				%b Поделиться
				12345
			%span.fake-share.twitter
				Follow @myfundraise

		%ul.footer-menu
			%li= link_to "Блог", '#'
			%li= link_to "Условия пользования", '#'
			%li= link_to "Политика конфидециальности", '#'
			%li= "&copy; #{Date.today.year} MyFundraise".html_safe
