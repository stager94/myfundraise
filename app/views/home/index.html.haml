.banner-wrapper
	%video#video(autoplay="autoplay" loop="loop")
		%source.mp4(src="/videos/video.mp4")
		%source.webm(src="/videos/video.webm")
		%source.ogg(src="/videos/video.ogg")
	.text
		%h2 
			%b Fundraising 
			для каждого!
		%h5 
			%u Сайт №1 
			для личного сбора средств
		- if user_signed_in?
			= link_to "Создать компанию", new_dashboard_campaign_path, class: 'btn btn-lg'
		- else
			= link_to "Создать компанию", '#', class: "btn btn-lg", data: { toggle: "modal", target: "#sign_up" }
= render 'shared/partners'

.container#fundraise-container
	.row
		.col-md-3.sidebar-wrapper
			#categories-wrapper= render 'shared/categories'
		.col-md-9.main-wrapper
			.sorting-panel
				%span Сортировка: 
				= link_to "Популярные", root_path(sort: :popular), class: "#{'active' if @sorting == 'popular'}"
				= link_to "Новые", root_path(sort: :recent), class: "#{'active' if @sorting == 'recent'}"
				/ = link_to "Возле меня", root_path(sort: :near_me), class: "#{'active' if @sorting == 'near_me'}"
				= link_to "Почти собрано", root_path(sort: :almost_there), class: "#{'active' if @sorting == 'almost_there'}"
				/ = link_to "Мои друзья", '#', class: "#{'active' if @sorting == 'popular'}"
			.campaigns-row= render @campaigns
			= paginate @campaigns
