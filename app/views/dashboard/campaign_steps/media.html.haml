.new-campaign-block
	= form_for [:dashboard, @campaign] do |f|
		.campaign-container
			%h3 Add a photo or video
			.grayed.row
				.col-md-4
					= link_to vk_photos_dashboard_user_path(current_user, count: 9, campaign_id: @campaign.id), remote: true, class: "select-block" do
						= fa_icon :vk
						Выбрать из ВКонтакте
				.col-md-4
					= link_to '#', class: "select-block" do
						= fa_icon :paperclip
						Загрузить фото
				.col-md-4
					= link_to '#', class: "select-block" do
						= fa_icon :youtube
						YouTube или Vimeo

			.actions.text-center
				= link_to "&larr; Назад".html_safe, '#', class: "pull-left"
				= link_to "Дальше".html_safe, '#'
