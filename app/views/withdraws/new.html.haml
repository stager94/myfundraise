.row
  .col-md-6.col-md-offset-3
    .page-header
      %h1 Вывод средств
    = form_for @withdraw, url: withdraws_path(campaign_id: params[:campaign_id]), method: :post do |f|
      .form-group
        = f.label :amount, "Сумма"
        = f.text_field :amount, class: "form-control", value: @campaign.to_withdraw
      .form-group
        = f.label :name, "ФИО владельца карты"
        = f.text_field :name, class: "form-control"
      .form-group
        = f.label :card_number, "Номер карты"
        = f.text_field :card_number, class: "form-control"
      .form-group
        = f.submit "Вывести", class: "btn btn-primary"
