          %li= link_to current_user.name, '#'
          %li= link_to "Выход", destroy_user_session_path, method: :delete
        - else
          %li= link_to 'Войти', '#', data: { toggle: "modal", target: "#sign_in" }
          %li= link_to 'Зарегистрироваться', '#', data: { toggle: "modal", target: "#sign_up" }

